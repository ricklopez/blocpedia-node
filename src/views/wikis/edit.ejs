<% include ../partials/header.ejs %>
<main class="container">
	<% include ../partials/messages.ejs %>
	<h1>Edit Wiki</h1>
	<div class="row">
		<div class="col-md-8">
    		<form method="POST" action="/wikis/<%= wiki.id %>/update">
			    <div class="form-group">
			      <label>Title</label>
			      <input type="text" name="title" value="<%= wiki.title %>" class="form-control"/>
			    </div>
			    <div class="form-group">
			      <label>Body</label>
			      <textarea rows="4" name="body" placeholder="Enter wiki body" class="form-control"/><%= wiki.body %></textarea>
			    </div>
			    <% if (user.role == 2 || (user.role == 1 && wiki.UserId == user.id)) {%>
			        <div class="form-group">
			          	<label>Private</label>
			          	<input type="checkbox" name="private" <%= wiki.private ? "checked" : "" %>/>
			        </div>
			    <% } %>
			    <input type="submit" value="Save" class="btn btn-primary"/>
			</form>
			</br>
			<% include ../collaborators/edit.ejs %>
	  	</div>
	</div>
</main>
<% include ../partials/footer.ejs %>